<?xml version="1.0" encoding="utf-8"?>
<!-- Group Chat 채팅방 아이템 레이아웃 -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 제목과 시간 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 채팅방 제목 -->
            <TextView
                android:id="@+id/textViewChatRoomName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#0D3145"
                android:textSize="18sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="프로젝트 팀 채팅방" />

            <!-- 즐겨찾기 아이콘 -->
            <ImageView
                android:id="@+id/imageViewFavorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:src="@android:drawable/star_big_off"
                android:contentDescription="즐겨찾기" />

            <!-- 시간 -->
            <TextView
                android:id="@+id/textViewTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/textHint"
                android:textSize="12sp"
                tools:text="12:30" />
        </LinearLayout>

        <!-- 참여자 정보 -->
        <TextView
            android:id="@+id/textViewParticipants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/textSecondary"
            android:textSize="12sp"
            tools:text="홍길동, 김철수, 박영희 외 3명" />

        <!-- 마지막 메시지와 뱃지 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 마지막 메시지 -->
            <TextView
                android:id="@+id/textViewLastMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/textSecondary"
                android:textSize="14sp"
                tools:text="Last message in the chat room" />

            <!-- 읽지 않은 메시지 뱃지 -->
            <TextView
                android:id="@+id/textViewUnreadBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_unread_badge"
                android:minWidth="20dp"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="gone"
                tools:text="99+"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
